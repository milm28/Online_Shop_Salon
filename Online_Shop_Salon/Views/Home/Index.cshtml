@{
    ViewBag.Title = "EShop Namestaj";
}

<section id="curouse">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @if (ViewBag.slideShows != null)
            {
                foreach (var item in ViewBag.slideShows)
                {

                    <!--Slider use script for first ACTIVE class"active"-->
                    <div class="carousel-item ">
                        <img class="d-block w-100 height-img-lg" src="@item.Name">
                    </div>
                }
            }
            else
            {
                <div class="carousel-item ">
                    <img class="d-block w-100 height-img-lg" src="../ImageSlider/soba-4211136894.jpg">
                </div>
                <div class="carousel-item ">
                    <img class="d-block w-100 height-img-lg" src="../ImageSlider/soba-2211122648.jpg">
                </div>
                <div class="carousel-item ">
                    <img class="d-block w-100 height-img-lg" src="../ImageSlider/soba-3211129161.jpg">
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

</section>

<section id="category_Items" style="padding-top:100px;">

    <div class="container-fluid mt-2 mb-5">
        <div class="products">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                    <div class="row g-3">

                        @foreach (var category in ViewBag.categories)
                        {
                            <div class="col-md-4">
                                <div class="card">
                                    <img src="@category.Category_Image" class="card-img-top">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between"> <span class="font-weight-bold">@category.Category_Name</span></div>
                                        <p class="card-text mb-1 mt-1">@category.Description</p>

                                    </div>
                                    <hr>
                                    <div class="card-body">

                                        @Html.ActionLink("Proizvodi", "SubCategoryDetails", "Categories", new { id = category.Category_Id }, new { @class = "text-right buttons btn btn-dark" })

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section scripts{

    <!--Script za dodavanje samo na prvu sliku tj.div active -->
    <script>
        $('.carousel-item').first().addClass('active')
    </script>
}



