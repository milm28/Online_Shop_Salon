@model Online_Shop_Salon.Models.tbl_Account

@{
    ViewBag.Title = "Register";

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#FirstName").keyup(function () {
            $('#FirstName').css('textTransform', 'capitalize');
        });
        $("#LastName").keyup(function () {
            $('#LastName').css('textTransform', 'capitalize');
        });
        $("#Address").keyup(function () {
            $('#Address').css('textTransform', 'capitalize');
        });
        $("#City").keyup(function () {
            $('#City').css('textTransform', 'capitalize');
        });

    });
</script>

<!--*********************************************************-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container-fluid px-4 px-md-4 py-5 mx-auto">
        <div class="row d-flex justify-content-center align">
            <div class="card-login border-0 rounded-0 mb-5">
                <h1 class="mb-2">Registracija</h1>
                <small>Unesite vaše podatke</small>
                <div class="row px-3 mt-4 mb-3"></div>

                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })


                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })


                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "mb-4" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })


                <button type="submit" class="btn btn-yellow px-3 mr-3">Register</button>

            </div>
        </div>
    </div>
}


