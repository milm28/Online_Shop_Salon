@model Online_Shop_Salon.Models.tbl_Account

@{
    ViewBag.Title = "Login";

}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid px-4 px-md-4 py-5 mx-auto">
        <div class="row d-flex justify-content-center align">
            <div class="card-login p-0 border-0 rounded-0 mb-5">
                <div class="card-login border-0 rounded-0 card0">
                    @if (TempData["Message_Login_Error"] != null)
                    {
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="alert">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                    <strong> @TempData["Message_Login_Error"]</strong>
                                </div>
                            </div>
                        </div>
                    }
                    @if (TempData["Message_Register_Success"] != null)
                    {
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="success">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                    <strong> @TempData["Message_Register_Success"]</strong>
                                </div>
                            </div>
                        </div>
                    }
                    <h1 class="mb-0">Login</h1>
                    <p>Unesite Podatke za logovanje</p>
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "font-weight-bold mb-0" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "mb-4" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "font-weight-bold mb-0" })

                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "mb-4" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    @Html.ActionLink("Back", "../", null, new { @class = "text-sm ml-auto text-dim" })
                    <div class="row justify-content-center mt-4">
                        <button type="submit" class="btn btn-yellow px-5">Login</button>
                    </div>

                </div> <img src="https://i.imgur.com/nUR4zg3.jpg" class="mt-auto">
            </div>
        </div>
    </div>
}