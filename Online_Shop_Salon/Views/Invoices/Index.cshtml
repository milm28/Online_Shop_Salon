@model IEnumerable<Online_Shop_Salon.Models.tbl_Invoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Leyout.cshtml";
}

<h2>Fakture</h2>


<table id="tableInvoice" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
               Broj Fakture
            </th>
            <th width="10%">
               Status Placanja
            </th>
            <th>
                Kupac
            </th>
            <th>
                Datum Kupovine
            </th>
            <th>
                Detaljnije
            </th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.Invoices)
    {
        <tbody>
            <tr>
                <td>
                    @item.Invoice_Id
                </td>
                <td width="10%">
                    @if (item.Status == true)
                    {
                        @Html.ActionLink(" ", "SetStatus", new { id = item.Invoice_Id }, new { @class = "form-check-input icon-on fa fa-toggle-on fa-lg" })
                    }
                    else
                    {
                        @Html.ActionLink(" ", "SetStatus", new { id = item.Invoice_Id }, new { @class = "form-check-input icon-off fa fa-toggle-off fa-lg" })}
                </td>
                <td>
                    @item.tbl_Account.UserName
                </td>
                <td>
                    @item.Created
                </td>
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.Invoice_Id })

                </td>
            </tr>
        </tbody>
    }

</table>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableInvoice').DataTable({
                'paging': true,
                'langthChange': false
            });
        });


    </script>

}