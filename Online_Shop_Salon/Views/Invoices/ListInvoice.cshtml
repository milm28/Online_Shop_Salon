
@{
    ViewBag.Title = "ListInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Računi</h2>
<table id="tableInvoice" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th width="5%">
                Broj Fakture
            </th>
            <th width="15%">
                Status Placanja
            </th>
            <th>
                Kupac
            </th>
            <th width="15%">
                Datum Kupovine
            </th>
            <th>
                Detaljnije
            </th>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in ViewBag.Invoices)
        {
            <tr>
                <td width="5%">
                    @item.Invoice_Id
                </td>
                <td width="15%">@(item.Status ? "Placeno" : "Nije Placeno")</td>
                <td>
                    @item.tbl_Account.UserName
                </td>
                <td width="15%;">
               
                    @item.Created.ToString("dd/MM/yyyy")
                </td>
                <td>

                    @Html.ActionLink("Details", "InvoiceDetailsUser", new { id = item.Invoice_Id })

                </td>
            </tr>
        }
    </tbody>
   

</table>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableInvoice').DataTable({
                'paging': true,
                'langthChange': false
            });
        });


    </script>

}

