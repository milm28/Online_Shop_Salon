
@{
    ViewBag.Title = "InvoiceDetailsUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalji Porudzbine</h2>

<table id="tableInvoice" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Faktura Broj
            </th>
            <th>
                Kupac
            </th>
            <th>
                Proizvod
            </th>

            <th>
                Kolicina
            </th>
            <th>
                Cena po Komadu
            </th>
            <th>
                Cena sa pdv
            </th>
            <th>
                Datum Kupovine
            </th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.InvoicesDetails)
    {
        <tbody>
            <tr>
                <td>
                    @item.Invoice_Id
                </td>
                <td>
                    @item.tbl_Invoice.tbl_Account.UserName
                </td>
                <td>
                    @item.tbl_Product.Product_Name
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Price_Per
                </td>
                <td>
                    @item.Total_Price_Tax
                </td>
                <td>
                    @item.tbl_Invoice.Created.ToString("dd/MM/yyyy")
                </td>
            </tr>
        </tbody>
        @Html.ActionLink("Back to List", "ListInvoice",new { Id=item.tbl_Invoice.Account_Id})
    }

</table>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableInvoice').DataTable({
                'paging': true,
                'langthChange': false
            });
        });


    </script>

}
